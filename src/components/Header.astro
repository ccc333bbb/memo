---
// 導覽列組件
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const languages = {
  'en-US': { name: 'English', url: '/en-US/' },
  'zh-CN': { name: '中文 (简)', url: '/zh-CN/' },
  'zh-TW': { name: '中文 (繁)', url: '/zh-TW/' },
};
---

<header class="site-header">
    <nav class="navigation">
        <a href={`/${lang}/`} class="nav-link logo">ccc333bbb</a>
        <div class="nav-links">
            <a href={`/${lang}/blog/`} class="nav-link">{t('nav.blog')}</a>
            
            <div class="lang-switcher">
                {Object.entries(languages).map(([id, { name, url }]) => (
                    id !== lang && <a href={url} class="lang-link">{name}</a>
                ))}
            </div>
        </div>
    </nav>
</header>

<style>
    .site-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1rem 2rem;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        z-index: 1000;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        transition: background 0.3s ease;
    }

    .site-header:hover {
        background: rgba(255, 255, 255, 0.4);
    }

    .navigation {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-link {
        color: #2c3e50;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        transition: background 0.3s ease, color 0.3s ease;
    }

    .nav-link.logo {
        font-family: 'Noto Serif SC', serif;
        font-weight: 700;
    }

    .nav-link:hover {
        background: rgba(44, 62, 80, 0.9);
        color: white;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .lang-switcher {
        display: flex;
        gap: 0.5rem;
        border: 1px solid rgba(44, 62, 80, 0.1);
        border-radius: 20px;
        padding: 0.2rem;
    }

    .lang-link {
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.9rem;
        text-decoration: none;
        color: #34495e;
        transition: background 0.3s ease;
    }

    .lang-link:hover {
        background: rgba(44, 62, 80, 0.1);
        color: #2c3e50;
    }
</style> 