<style>
    /* ‰∏ªË¶ÅÂÖßÂÆπ */
    .main-content {
        position: relative;
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    
    .hero-section {
        text-align: center;
        max-width: 600px;
        width: 100%;
    }
    
    /* È†≠ÂÉè */
    .avatar-section {
        margin-bottom: 2rem;
    }
    
    .avatar-frame {
        width: 150px;
        height: 150px;
        margin: 0 auto;
        border-radius: 50%;
        background: linear-gradient(145deg, #ffffff, #e6e6e6);
        padding: 6px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        animation: float 6s ease-in-out infinite;
    }
    
    .avatar-frame img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-10px) rotate(2deg); }
    }
    
    /* ÊñáÂ≠ó */
    .name {
        font-family: 'Noto Serif SC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        animation: fadeInUp 1s ease-out 0.5s both;
    }
    
    .title {
        color: #7f8c8d;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out 0.7s both;
    }
    
    /* ÂêçË®ÄÂç°Áâá */
    .quote-card {
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        animation: fadeInUp 1s ease-out 0.9s both;
    }
    
    .quote {
        font-style: italic;
        font-size: 1.2rem;
        line-height: 1.6;
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    
    .quote-author {
        color: #7f8c8d;
        font-size: 1rem;
    }
    
    /* Â∞éË¶ΩÂç°Áâá */
    .navigation-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        animation: fadeInUp 1s ease-out 1.1s both;
    }
    
    .nav-card {
        display: block;
        padding: 2rem;
        border-radius: 20px;
        text-decoration: none;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        color: inherit;
    }
    
    .nav-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    
    .card-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .nav-card h3 {
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
        color: #2c3e50;
    }
    
    .nav-card p {
        color: #7f8c8d;
        line-height: 1.5;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* ÈüøÊáâÂºè */
    @media (max-width: 768px) {
        .main-content {
            padding: 1rem;
            min-height: calc(100vh - 70px);
        }
        
        .name {
            font-size: 2rem;
        }
        
        .avatar-frame {
            width: 120px;
            height: 120px;
        }
        
        .quote {
            font-size: 1.1rem;
        }
    }
</style>