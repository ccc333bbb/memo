---
import Layout from '../../../layouts/Layout.astro';
import type { ContentEntry } from '../../../types/content';
import Navigation from '../../../components/Navigation.astro';

const reviews = Object.values(import.meta.glob('./*.md', { eager: true })) as ContentEntry[];
---

<Layout title="觀影心得 - ccc333bbb" lang="tw">
    <Navigation lang="tw" currentPath={Astro.url.pathname} />

    <main class="main-content">
        <div class="ink-bg ink-effect"></div>
        <div class="blog-container">
            <header class="blog-header">
                <h1>觀影心得</h1>
                <p>我的電影觀後感與想法</p>
            </header>
            <div class="posts-grid">
                {reviews.length > 0 ? reviews.map((review) => (
                    <article class="post-card glass-effect">
                        <a href={review.url} class="post-link">
                            <h2 class="post-title">{review.frontmatter.title}</h2>
                            <p class="post-description">{review.frontmatter.description}</p>
                            <div class="post-meta">
                                <time class="post-date">
                                    {review.frontmatter.date && new Date(review.frontmatter.date as string).toLocaleDateString('zh-TW', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                            </div>
                        </a>
                    </article>
                )) : (
                    <div class="empty-state">
                        <p>暫無觀影心得，敬請期待！</p>
                    </div>
                )}
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        position: relative;
        min-height: 100vh;
        padding: 6rem 2rem 2rem;
    }
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
    }
    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    .blog-header h1 {
        font-family: 'Noto Serif TC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    .blog-header p {
        color: #7f8c8d;
        font-size: 1.1rem;
    }
    .posts-grid {
        display: grid;
        gap: 2rem;
    }
    .post-card {
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    .post-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }
    .post-title {
        font-family: 'Noto Serif TC', serif;
        font-size: 1.5rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    .post-description {
        color: #7f8c8d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .post-date {
        color: #95a5a6;
        font-size: 0.9rem;
    }
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }
    @media (max-width: 768px) {
        .main-content {
            padding: 5rem 1rem 2rem;
        }
        .blog-header h1 {
            font-size: 2rem;
        }
        .post-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
