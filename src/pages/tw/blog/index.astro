---
import Layout from '../../../layouts/Layout.astro';
import type { ContentEntry } from '../../../types/content';
import Navigation from '../../../components/Navigation.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import ScrollToTop from '../../../components/ScrollToTop.astro';

// 獲取部落格文章
const posts = Object.values(import.meta.glob('./*.md', { eager: true })) as ContentEntry[];
---

<Layout title="部落格 - ccc333bbb" lang="tw">
    <Navigation lang="tw" currentPath={Astro.url.pathname} />
    <Breadcrumb lang="tw" currentPath={Astro.url.pathname} title="部落格" />

    <!-- 主要內容 -->
    <main class="main-content">
        <div class="ink-bg ink-effect"></div>
        
        <div class="blog-container">
            <header class="blog-header">
                <h1>部落格</h1>
                <p>我的思考與記錄</p>
            </header>
            
            <div class="posts-grid">
                {posts.length > 0 ? posts.map((post) => (
                    <article class="post-card glass-effect">
                        <a href={post.url} class="post-link">
                            <h2 class="post-title">{post.frontmatter.title}</h2>
                            <p class="post-description">{post.frontmatter.description}</p>
                            <div class="post-meta">
                                <time class="post-date">
                                    {post.frontmatter.pubDate && new Date(post.frontmatter.pubDate as string).toLocaleDateString('zh-TW', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                                {post.frontmatter.tags && (
                                    <div class="post-tags">
                                        {post.frontmatter.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                )}
                            </div>
                        </a>
                    </article>
                )) : (
                    <div class="empty-state">
                        <p>暫無部落格文章，敬請期待！</p>
                    </div>
                )}
            </div>
        </div>
    </main>
    
    <ScrollToTop />
</Layout>

<style>
    /* 主要內容 */
    .main-content {
        position: relative;
        min-height: calc(100vh - 70px);
        padding: 2rem;
    }
    
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    /* 部落格標題 */
    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .blog-header h1 {
        font-family: 'Noto Serif SC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .blog-header p {
        color: #7f8c8d;
        font-size: 1.1rem;
    }
    
    /* 文章網格 */
    .posts-grid {
        display: grid;
        gap: 2rem;
    }
    
    .post-card {
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    
    .post-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }
    
    .post-title {
        font-family: 'Noto Serif SC', serif;
        font-size: 1.5rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    
    .post-description {
        color: #7f8c8d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .post-date {
        color: #95a5a6;
        font-size: 0.9rem;
    }
    
    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    .tag {
        background: rgba(52, 152, 219, 0.1);
        color: #3498db;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }
    
    /* 響應式 */
    @media (max-width: 768px) {
        .main-content {
            padding: 1rem;
            min-height: calc(100vh - 60px);
        }
        
        .blog-header h1 {
            font-size: 2rem;
        }
        
        .post-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>