---
import Layout from '../../../layouts/Layout.astro';

// 獲取部落格文章
const posts = Object.values(import.meta.glob('./*.md', { eager: true }));
---

<Layout title="部落格 - ccc333bbb" lang="zh-TW">
    <!-- 導覽列 -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/memo/" class="nav-logo">ccc333bbb</a>
            <div class="nav-links">
                <a href="/memo/tw/" class="nav-link">首頁</a>
                <a href="/memo/tw/blog/" class="nav-link active">部落格</a>
                <div class="lang-switcher">
                    <a href="/memo/en/blog/" class="lang-link">En</a>
                    <a href="/memo/zh/blog/" class="lang-link">简中</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- 主要內容 -->
    <main class="main-content">
        <div class="ink-bg ink-effect"></div>
        
        <div class="blog-container">
            <header class="blog-header">
                <h1>部落格</h1>
                <p>我的思考與記錄</p>
            </header>
            
            <div class="posts-grid">
                {posts.length > 0 ? posts.map((post) => (
                    <article class="post-card glass-effect">
                        <a href={post.url} class="post-link">
                            <h2 class="post-title">{post.frontmatter.title}</h2>
                            <p class="post-description">{post.frontmatter.description}</p>
                            <div class="post-meta">
                                <time class="post-date">
                                    {new Date(post.frontmatter.pubDate).toLocaleDateString('zh-TW', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                                {post.frontmatter.tags && (
                                    <div class="post-tags">
                                        {post.frontmatter.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                )}
                            </div>
                        </a>
                    </article>
                )) : (
                    <div class="empty-state">
                        <p>暫無部落格文章，敬請期待！</p>
                    </div>
                )}
            </div>
        </div>
    </main>
</Layout>

<style>
    /* 導覽列 */
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }
    
    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .nav-logo {
        font-family: 'Noto Serif SC', serif;
        font-size: 1.5rem;
        font-weight: 500;
        color: #2c3e50;
        text-decoration: none;
    }
    
    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    
    .nav-link {
        color: #2c3e50;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }
    
    .nav-link:hover,
    .nav-link.active {
        color: #3498db;
    }
    
    .lang-switcher {
        display: flex;
        gap: 0.5rem;
    }
    
    .lang-link {
        padding: 0.5rem 1rem;
        background: rgba(52, 152, 219, 0.1);
        color: #3498db;
        text-decoration: none;
        border-radius: 20px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .lang-link:hover {
        background: #3498db;
        color: white;
    }
    
    /* 主要內容 */
    .main-content {
        position: relative;
        min-height: 100vh;
        padding: 6rem 2rem 2rem;
    }
    
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    /* 部落格標題 */
    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .blog-header h1 {
        font-family: 'Noto Serif SC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .blog-header p {
        color: #7f8c8d;
        font-size: 1.1rem;
    }
    
    /* 文章網格 */
    .posts-grid {
        display: grid;
        gap: 2rem;
    }
    
    .post-card {
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    
    .post-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }
    
    .post-title {
        font-family: 'Noto Serif SC', serif;
        font-size: 1.5rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 1rem;
        line-height: 1.3;
    }
    
    .post-description {
        color: #7f8c8d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .post-date {
        color: #95a5a6;
        font-size: 0.9rem;
    }
    
    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    .tag {
        background: rgba(52, 152, 219, 0.1);
        color: #3498db;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    /* 空狀態 */
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }
    
    /* 響應式 */
    @media (max-width: 768px) {
        .nav-container {
            padding: 1rem;
        }
        
        .nav-links {
            gap: 1rem;
        }
        
        .main-content {
            padding: 5rem 1rem 2rem;
        }
        
        .blog-header h1 {
            font-size: 2rem;
        }
        
        .post-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>