---
import Layout from '../../../layouts/Layout.astro';
import type { ContentEntry } from '../../../types/content';
import Navigation from '../../../components/Navigation.astro';

const posts = Object.values(import.meta.glob('./*.md', { eager: true })) as ContentEntry[];
---

<Layout title="Êõ∏Á±§ - ccc333bbb" lang="tw">
    <Navigation lang="tw" currentPath={Astro.url.pathname} />

    <main class="main-content">
        <div class="ink-bg ink-effect"></div>
        
        <div class="blog-container">
            <header class="blog-header">
                <h1>Êõ∏Á±§ üîñ</h1>
                <p>Á≤æÈÅ∏ÁöÑÊúâÁî®Ë≥áÊ∫êÈõÜÂêà</p>
            </header>
            
            <div class="posts-grid">
                {posts.length > 0 ? posts.map((post) => (
                    <article class="post-card glass-effect">
                        <a href={post.url} class="post-link">
                            <div class="bookmark-header">
                                <h2 class="post-title">{post.frontmatter.title}</h2>
                                {post.frontmatter.category && (
                                    <span class={`bookmark-category ${post.frontmatter.category}`}>
                                        {post.frontmatter.category === 'development' ? '‚ö° ÈñãÁôº' :
                                         post.frontmatter.category === 'design' ? 'üé® Ë®≠Ë®à' :
                                         post.frontmatter.category === 'tools' ? 'üîß Â∑•ÂÖ∑' :
                                         post.frontmatter.category === 'learning' ? 'üìö Â≠∏Áøí' : post.frontmatter.category}
                                    </span>
                                )}
                            </div>
                            <p class="post-description">{post.frontmatter.description}</p>
                            <div class="post-meta">
                                <time class="post-date">
                                    {post.frontmatter.pubDate && new Date(post.frontmatter.pubDate as string).toLocaleDateString('zh-TW', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                                {post.frontmatter.tags && (
                                    <div class="post-tags">
                                        {post.frontmatter.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                )}
                            </div>
                        </a>
                    </article>
                )) : (
                    <div class="empty-state">
                        <p>Êö´ÁÑ°Êõ∏Á±§ÔºåÊï¨Ë´ãÊúüÂæÖÔºÅ</p>
                    </div>
                )}
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        position: relative;
        min-height: 100vh;
        padding: 6rem 2rem 2rem;
    }
    
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .blog-header h1 {
        font-family: 'Noto Serif SC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .blog-header p {
        color: #7f8c8d;
        font-size: 1.1rem;
    }
    
    .posts-grid {
        display: grid;
        gap: 2rem;
    }
    
    .post-card {
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    
    .post-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }
    
    .bookmark-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 1rem;
    }
    
    .post-title {
        font-family: 'Noto Serif SC', serif;
        font-size: 1.5rem;
        font-weight: 500;
        color: #2c3e50;
        margin: 0;
    }
    
    .bookmark-category {
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
        white-space: nowrap;
    }
    
    .bookmark-category.development {
        background: rgba(52, 152, 219, 0.1);
        color: #3498db;
    }
    
    .bookmark-category.design {
        background: rgba(155, 89, 182, 0.1);
        color: #9b59b6;
    }
    
    .bookmark-category.tools {
        background: rgba(241, 196, 15, 0.1);
        color: #f39c12;
    }
    
    .bookmark-category.learning {
        background: rgba(46, 204, 113, 0.1);
        color: #27ae60;
    }
    
    .post-description {
        color: #7f8c8d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .post-date {
        color: #95a5a6;
        font-size: 0.9rem;
    }
    
    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    .tag {
        background: rgba(52, 152, 219, 0.1);
        color: #3498db;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }
    
    /* ÈüøÊáâÂºè */
    @media (max-width: 768px) {
        .main-content {
            padding: 5rem 1rem 2rem;
        }
        
        .blog-header h1 {
            font-size: 2rem;
        }
        
        .bookmark-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .post-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>