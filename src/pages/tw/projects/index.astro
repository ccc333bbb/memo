---
import Layout from '../../../layouts/Layout.astro';
import type { ContentEntry } from '../../../types/content';
import Navigation from '../../../components/Navigation.astro';

const posts = Object.values(import.meta.glob('./*.md', { eager: true })) as ContentEntry[];
---

<Layout title="Â∞àÊ°à - ccc333bbb" lang="tw">
    <Navigation lang="tw" currentPath={Astro.url.pathname} />

    <main class="main-content">
        <div class="ink-bg ink-effect"></div>
        
        <div class="blog-container">
            <header class="blog-header">
                <h1>Â∞àÊ°à üöÄ</h1>
                <p>ÊàëÁöÑ‰ΩúÂìÅËàáÂâµ‰ΩúÂ±ïÁ§∫</p>
            </header>
            
            <div class="posts-grid">
                {posts.length > 0 ? posts.map((post) => (
                    <article class="post-card glass-effect">
                        <a href={post.url} class="post-link">
                            <div class="project-header">
                                <h2 class="post-title">{post.frontmatter.title}</h2>
                                {post.frontmatter.projectStatus && (
                                    <span class={`project-status ${post.frontmatter.projectStatus}`}>
                                        {post.frontmatter.projectStatus === 'completed' ? '‚úÖ Â∑≤ÂÆåÊàê' :
                                         post.frontmatter.projectStatus === 'in-progress' ? 'üî® ÈÄ≤Ë°å‰∏≠' :
                                         post.frontmatter.projectStatus === 'archived' ? 'üì¶ Â∑≤Ê≠∏Ê™î' : post.frontmatter.projectStatus}
                                    </span>
                                )}
                            </div>
                            <p class="post-description">{post.frontmatter.description}</p>
                            {post.frontmatter.techStack && (
                                <div class="tech-stack">
                                    {post.frontmatter.techStack.map((tech) => (
                                        <span class="tech-tag">{tech}</span>
                                    ))}
                                </div>
                            )}
                            <div class="post-meta">
                                <time class="post-date">
                                    {post.frontmatter.pubDate && new Date(post.frontmatter.pubDate as string).toLocaleDateString('zh-TW', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                                <div class="project-links">
                                    {post.frontmatter.sourceUrl && (
                                        <span class="project-link-item">üìÇ ÂéüÂßãÁ¢º</span>
                                    )}
                                    {post.frontmatter.demoUrl && (
                                        <span class="project-link-item">üîó ÊºîÁ§∫</span>
                                    )}
