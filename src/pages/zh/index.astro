---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
---

<Layout title="ccc333bbb - Dark Walker 的备忘录" lang="zh">
    <Navigation lang="zh" currentPath={Astro.url.pathname} />

    <!-- 主要内容 -->
    <main class="main-content">
        <!-- 水墨背景 -->
        <div class="ink-bg ink-effect"></div>
        
        <!-- 首页内容 -->
        <div class="hero-section">
            <div class="avatar-section">
                <div class="avatar-frame">
                    <img src="/memo/avatar.jpg" alt="ccc333bbb" />
                </div>
            </div>
            
            <h1 class="name">ccc333bbb</h1>
            <p class="title">Dark Walker</p>
            
            <div class="quote-card glass-effect">
                <blockquote class="quote">
                    "千里之行，始于足下。"
                </blockquote>
                <cite class="quote-author">— 老子</cite>
            </div>
            
            <div class="navigation-cards">
                <a href="/memo/zh/blog/" class="nav-card glass-effect">
                    <div class="card-icon">📝</div>
                    <h3>博客</h3>
                    <p>我的思考与记录</p>
                </a>
                <a href="/memo/zh/thoughts/" class="nav-card glass-effect">
                    <div class="card-icon">💭</div>
                    <h3>想法</h3>
                    <p>快速的想法与观察</p>
                </a>
                <a href="/memo/zh/projects/" class="nav-card glass-effect">
                    <div class="card-icon">🚀</div>
                    <h3>项目</h3>
                    <p>我构建与参与的项目</p>
                </a>
                <a href="/memo/zh/bookmarks/" class="nav-card glass-effect">
                    <div class="card-icon">🔖</div>
                    <h3>书签</h3>
                    <p>精选的链接与资源</p>
                </a>
                <a href="/memo/zh/movie-review/" class="nav-card glass-effect">
                    <div class="card-icon">🎬</div>
                    <h3>观影心得</h3>
                    <p>电影思考与评论</p>
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    /* 主要内容 */
    .main-content {
        position: relative;
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    
    .ink-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    
    .hero-section {
        text-align: center;
        max-width: 600px;
        width: 100%;
    }
    
    /* 头像 */
    .avatar-section {
        margin-bottom: 2rem;
    }
    
    .avatar-frame {
        width: 150px;
        height: 150px;
        margin: 0 auto;
        border-radius: 50%;
        background: linear-gradient(145deg, #ffffff, #e6e6e6);
        padding: 6px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        animation: float 6s ease-in-out infinite;
    }
    
    .avatar-frame img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-10px) rotate(2deg); }
    }
    
    /* 文字 */
    .name {
        font-family: 'Noto Serif SC', serif;
        font-size: 2.5rem;
        font-weight: 300;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        animation: fadeInUp 1s ease-out 0.5s both;
    }
    
    .title {
        color: #7f8c8d;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out 0.7s both;
    }
    
    /* 名言卡片 */
    .quote-card {
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        animation: fadeInUp 1s ease-out 0.9s both;
    }
    
    .quote {
        font-style: italic;
        font-size: 1.2rem;
        line-height: 1.6;
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    
    .quote-author {
        color: #7f8c8d;
        font-size: 1rem;
    }
    
    /* 导览卡片 */
    .navigation-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        animation: fadeInUp 1s ease-out 1.1s both;
    }
    
    .nav-card {
        display: block;
        padding: 2rem;
        border-radius: 20px;
        text-decoration: none;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        color: inherit;
    }
    
    .nav-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 45px rgba(0,0,0,0.15);
    }
    
    .card-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .nav-card h3 {
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
        color: #2c3e50;
    }
    
    .nav-card p {
        color: #7f8c8d;
        line-height: 1.5;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* 响应式 */
    @media (max-width: 768px) {
        .main-content {
            padding: 1rem;
            min-height: calc(100vh - 70px);
        }
        
        .name {
            font-size: 2rem;
        }
        
        .avatar-frame {
            width: 120px;
            height: 120px;
        }
        
        .quote {
            font-size: 1.1rem;
        }
    }
</style>