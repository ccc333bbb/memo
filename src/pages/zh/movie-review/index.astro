---
import Layout from '../../../layouts/Layout.astro';

// 获取观影心得文章
const reviews = Object.values(import.meta.glob('./*.md', { eager: true }));
---

<Layout title="观影心得 - ccc333bbb" lang="zh">
    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/memo/" class="nav-logo">ccc333bbb</a>
            <div class="nav-links">
                <a href="/memo/zh/" class="nav-link">首页</a>
                <a href="/memo/zh/blog/" class="nav-link">博客</a>
                <a href="/memo/zh/thoughts/" class="nav-link">想法</a>
                <a href="/memo/zh/projects/" class="nav-link">项目</a>
                <a href="/memo/zh/bookmarks/" class="nav-link">书签</a>
                <a href="/memo/zh/movie-review/" class="nav-link active">观影心得</a>
                <div class="lang-switcher">
                    <a href="/memo/en/movie-review/" class="lang-link">EN</a>
                    <a href="/memo/tw/movie-review/" class="lang-link">繁中</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- 主要内容 -->
    <main class="main-content">
        <div class="ink-bg ink-effect"></div>

        <div class="blog-container">
            <h1 class="page-title">观影心得</h1>

            <div class="reviews-list">
                {reviews.map((review) => (
                    <div class="review-card">
                        <a href={review.url} class="review-link">
                            <h2 class="review-title">{review.frontmatter.title}</h2>
                            {review.frontmatter.date && (
                                <p class="review-date">{new Date(review.frontmatter.date).toLocaleDateString('zh-CN')}</p>
                            )}
                            {review.frontmatter.description && (
                                <p class="review-desc">{review.frontmatter.description}</p>
                            )}
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        padding: 2rem;
        position: relative;
    }

    .ink-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .blog-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .page-title {
        margin-bottom: 1rem;
        font-size: 2.5rem;
        color: #333;
    }

    .test-notice {
        background-color: #fff8e6;
        border-left: 4px solid #ffcc00;
        padding: 0.8rem 1rem;
        margin-bottom: 2rem;
        border-radius: 4px;
    }

    .test-notice p {
        margin: 0;
        color: #735c00;
    }

    .reviews-list {
        display: grid;
        gap: 1.5rem;
    }

    .review-card {
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 1.5rem;
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative;
    }

    .review-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }

    .review-link {
        text-decoration: none;
        color: inherit;
    }

    .review-title {
        margin: 0 0 0.5rem;
        font-size: 1.5rem;
        color: #222;
    }

    .test-badge {
        display: inline-block;
        background-color: #e6f7ff;
        color: #0066cc;
        font-size: 0.7rem;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .review-date {
        font-size: 0.9rem;
        color: #666;
        margin: 0.5rem 0;
    }

    .review-desc {
        margin-top: 0.5rem;
        color: #444;
        line-height: 1.5;
    }
</style>
