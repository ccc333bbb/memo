// 語言選擇首頁
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ccc333bbb - Dark Walker's Memo</title>
    <link rel="icon" type="image/svg+xml" href="/memo/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@300;400;500;700&family=Noto+Sans:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- 水墨背景 -->
        <div class="ink-bg"></div>
        
        <!-- 主要內容 -->
        <div class="main-content">
            <div class="avatar">
                <div class="avatar-frame">
                    <img src="/memo/avatar.jpg" alt="ccc333bbb" />
                </div>
            </div>
            
            <h1 class="name">ccc333bbb</h1>
            <p class="title">Dark Walker</p>
            
            <div class="quote-section">
                <p class="quote">"Choose your language to explore my memo"</p>
                <p class="quote-author">— Welcome</p>
            </div>
            
            <div class="language-selection">
                <a href="/memo/en/" class="lang-btn primary">
                    <span class="lang-name">English</span>
                    <span class="lang-desc">Explore in English</span>
                </a>
                <a href="/memo/zh/" class="lang-btn">
                    <span class="lang-name">简体中文</span>
                    <span class="lang-desc">使用简体中文浏览</span>
                </a>
                <a href="/memo/tw/" class="lang-btn">
                    <span class="lang-name">繁體中文</span>
                    <span class="lang-desc">使用繁體中文瀏覽</span>
                </a>
            </div>
        </div>
        
        <!-- 自動重定向提示 -->
        <div class="auto-redirect">
            <p>Auto-redirecting to English in <span id="countdown">3</span>s</p>
            <button id="stay">Stay here</button>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Noto Sans', sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .container {
            position: relative;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        /* 水墨背景效果 */
        .ink-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(ellipse at 20% 30%, rgba(0,0,0,0.1) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 70%, rgba(0,0,0,0.08) 0%, transparent 60%),
                radial-gradient(ellipse at 60% 20%, rgba(0,0,0,0.05) 0%, transparent 40%);
            z-index: -1;
        }

        .main-content {
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        /* 頭像 */
        .avatar {
            margin-bottom: 2rem;
        }

        .avatar-frame {
            width: 120px;
            height: 120px;
            margin: 0 auto;
            border-radius: 50%;
            background: linear-gradient(145deg, #ffffff, #e6e6e6);
            padding: 4px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .avatar-frame img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }

        /* 文字 */
        .name {
            font-family: 'Noto Serif SC', serif;
            font-size: 2rem;
            font-weight: 300;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .title {
            color: #7f8c8d;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .quote-section {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .quote {
            font-style: italic;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .quote-author {
            color: #7f8c8d;
            font-size: 0.9rem;
        }

        /* 語言選擇 */
        .language-selection {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-bottom: 2rem;
        }

        .lang-btn {
            display: block;
            padding: 1rem 1.5rem;
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid transparent;
            border-radius: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
            text-align: left;
        }

        .lang-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            border-color: #3498db;
        }

        .lang-btn.primary {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
        }

        .lang-btn.primary:hover {
            border-color: #2980b9;
        }

        .lang-name {
            display: block;
            font-weight: 500;
            font-size: 1.1rem;
            color: #2c3e50;
            margin-bottom: 0.2rem;
        }

        .lang-btn.primary .lang-name {
            color: white;
        }

        .lang-desc {
            display: block;
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        .lang-btn.primary .lang-desc {
            color: rgba(255, 255, 255, 0.8);
        }

        /* 自動重定向 */
        .auto-redirect {
            position: fixed;
            bottom: 2rem;
            background: rgba(52, 152, 219, 0.9);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 25px;
            backdrop-filter: blur(10px);
            animation: slideUp 0.5s ease-out;
        }

        .auto-redirect p {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        #stay {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 0.5rem 1rem;
            border-radius: 15px;
            cursor: pointer;
            font-size: 0.8rem;
            transition: background 0.3s ease;
        }

        #stay:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        @keyframes slideUp {
            from {
                transform: translateY(100px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* 響應式 */
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            
            .name {
                font-size: 1.5rem;
            }
            
            .avatar-frame {
                width: 100px;
                height: 100px;
            }
        }
    </style>

    <script>
        let countdown = 3;
        const countdownEl = document.getElementById('countdown');
        const autoRedirectEl = document.querySelector('.auto-redirect') as HTMLElement;
        const stayBtn = document.getElementById('stay') as HTMLButtonElement;
        
        // 倒計時
        const timer = setInterval(() => {
            countdown--;
            if (countdownEl) {
                countdownEl.textContent = countdown.toString();
            }
            
            if (countdown <= 0) {
                window.location.href = '/memo/en/';
            }
        }, 1000);
        
        // 停留按鈕
        if (stayBtn) {
            stayBtn.addEventListener('click', () => {
                clearInterval(timer);
                if (autoRedirectEl) {
                    autoRedirectEl.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>